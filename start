#!/usr/bin/env bash
# ScribeAI â€” start script
# Gebruik: ./start [mode]
#   mode: general | report | cv | notes

cd "$(dirname "$0")"

# Zorg dat de nvm node beschikbaar is voor npm (bij eerste installatie)
